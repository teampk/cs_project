<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--toolbar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_chevron_left_white_24dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="행복 측정"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@color/colorTextInButton"
                    />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent">

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorBackgroundLightGray">


                <!-- inf -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <!-- inf -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="행복"
                            android:textSize="24dp"
                            android:textColor="@color/colorText"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="을 위한 10가지 영역"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />

                    </LinearLayout>




                </LinearLayout>

                <!-- 1.physical -->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/column_1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="1.신체적"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:id="@+id/iv_question_1"
                            android:layout_marginLeft="10dp"
                            android:layout_width="18dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/question"/>



                        <Button
                            android:id="@+id/btn_question_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:text="설문시작"
                            android:textColor="@color/colorTextInButton"
                            android:background="@drawable/button_orange_round"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="점수 : 5"/>



                    </LinearLayout>


                </LinearLayout>

                <!-- 2.Emotional -->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/column_1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="2.정서적"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:id="@+id/iv_question_2"
                            android:layout_marginLeft="10dp"
                            android:layout_width="18dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/question"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_question_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:text="설문시작"
                        android:textColor="@color/colorTextInButton"
                        android:background="@drawable/button_orange_round"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="점수 : 5"/>



                </LinearLayout>

                <!-- 3.Social -->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/column_1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="3.사회적"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />

                    </LinearLayout>


                </LinearLayout>

                <!-- 4.Financial -->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/column_1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="4.경제적"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />

                    </LinearLayout>


                </LinearLayout>

                <!-- 5.Environmental -->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/column_1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="5.환경적"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />

                    </LinearLayout>



                </LinearLayout>

                <!-- 6.Intellectual -->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/column_1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="6.지적"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />

                    </LinearLayout>


                </LinearLayout>

                <!-- 7.Occupational -->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/column_1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="7.직업적"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>

                <!-- 8.Spiritual -->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/column_1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="8.영적"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>

                <!-- 9.Mental -->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/column_1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="9.정신적"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>

                <!-- 10.Medical -->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/column_1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="10.메디컬"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제출하기"
                android:textStyle="bold"
                android:textColor="@color/colorTextInButton"
                android:background="@drawable/button_orange_round"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>


